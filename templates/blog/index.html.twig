{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
  <section class="section-order">
  </section>

<section class="blog-redactions">
 <div class="formular-blog">
  <form method="post"  enctype="multipart/form-data">
   {{ form_start(formulaire) }}
 
   {{ form_label(formulaire.titre, 'Titre de votre article') }}
   {{ form_row(formulaire.titre, { 'label': false }) }}

   {{ form_label(formulaire.picturecover, 'Image de Couverture') }}
   {{form_row(formulaire.picturecover, { 'label': false }) }}


   {{ form_label(formulaire.description, '') }}
   {{ form_row(formulaire.description, { 'label': false}) }}

   {{ form_label(formulaire.publier, 'Publier') }}
   {{ form_widget(formulaire.publier, { 'label': 'Publier l\'article'}) }}

   {{ form_end(formulaire) }} 
</form>

 </div>


</section>


{% endblock %}
