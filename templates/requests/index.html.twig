{% extends 'base.html.twig' %}

{% block title %}Page de commande{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .formular-section-order .row .col textarea
    {
      height: 150px;
    }

    .formular-section-order .row .col button
    {
        background: var(--main);
        border:none;
    }

    .section-order 
    {
      background-image: linear-gradient(to right, rgba(15, 32, 39, 0.39), rgba(32, 58, 67, 0.5), #2c5364), url('../images/cereales.jpg');  
      height:300px;
    }

    
     .section-body h2,p 
     {
        text-align: center;
        font-family:'PT Sans' sans-serif;
        font-weight:600;
        color: #2c5364;
        margin-bottom:2rem;
     }

    .section-body 
    {
      width: 97%;
      margin:0 auto;
      padding:1.5rem;
     }

    .section-body .section-farmer .farmer 
    {
     width:210px;
     height:300px;
     background:white;
     margin:5px;
     box-shadow: rgba(0, 0, 0, 0.08) 0px 4px 12px;
     text-decoration:none;
     color: black;
     }
     .section-body .section-farmer .farmer:hover
     {
      scale:1.05;
      width:220px;
      }

     .section-body .section-farmer .farmer:hover > .container-img img
     {
      width:220px;
      box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
     }

    .section-body .section-farmer  
    {
      display:grid;
      grid-template-columns: repeat(4,2fr);
      margin:2rem auto;
     }
     
     .farmer {
        animation: bounce 2s infinite ease-in-out;
      }
      
      @keyframes bounce {
        0% { transform: translateY(0); }
        50% { transform: translateY(-10px); } /* Adjust the distance for desired effect */
        100% { transform: translateY(0); }
      } 

      .section-body .section-farmer .farmer .container-img img
      {
        width:210px;
        height:160px;
      }

      .section-body .section-farmer .farmer .description
      {
        margin:5px;
      }

      .section-body .section-farmer .farmer .description p
      {
        margin:5px;
      }
      .section-body .section-farmer .farmer .description h6
      {
        margin:5px;
        font-size:15px;
        font-weight:600;
      }

      .section-body h5 
      {
        text-align:center;
        font-size: 30px;
        margin-bottom:2rem;
      }

      .section-body .section-farmer .farmer .description .city
      {
        align-items:center;
        display:flex;
        margin:5px;
        font-size:13px;
      }
      .section-body .section-farmer .farmer .description .domaine
      {
        align-items:center;
        display:flex;
        margin:5px;
        font-size:13px;
      }

      .section-body .section-farmer
      {
        width:100%;
        display:flex;
        justify-content: space-between;
       }

      .section-body .section-farmer .point-de-vente
      {
        width:40%;
        display:grid;
        grid-template-columns: repeat(2,1fr);
       }

      .section-body .section-farmer .right-point-de-vente
      {
        width:60%;
       }

      .section-body .section-farmer .right-point-de-vente 
      .conteneur
      {
        display:grid;
        grid-template-columns: repeat(2,1fr);
        grid-gap:5px;
        margin:0 10rem;
       }

      .section-body .section-farmer .right-point-de-vente 
      .conteneur span
      {
        display:flex;
        align-items:center;
        font-weight:600;
      }
      .section-body .section-farmer .right-point-de-vente 
      .conteneur span i 
      {
         font-size:24px;
      }

      .section-body .section-farmer .right-point-de-vente 
      .conteneur h5
      {
       font-size:16px;
       margin-left:10px;
    
      }

      .section-body .section-farmer .right-point-de-vente 
      .gaphique h4
      {
        font-size:17px;
        font-weight:800;
        color:#707B7C;
        text-align:center;
        font-style:italic;
       }

      .section-body .section-farmer .right-point-de-vente 
      .gaphique .plan-data 
      {
        width:100%;
        height:auto;
        margin-top:2rem;
        position:relative;
        display: flex;
        justify-content:space-around;
       }


       .section-body .section-farmer .right-point-de-vente 
      .gaphique .plan-data .chart1
      {
         width:300px;
         height:300px;
         color:white;
       }


      .section-body .section-farmer .right-point-de-vente 
      .gaphique .plan-data .chart2
      {
         width:300px;
         height:300px;
       }

      .section-body .section-farmer .right-point-de-vente h3
      {
        text-align:center;
        font-weight:bold;
        color:var(--main)
      }


       
</style>

    <section class="section-order">

    </section>

    <div class="section-body">
        <h2>Aller à la rencontre de vos agriculteurs</h2>
        <p>Les points de vente qui ont fait la connaissance de la plateforme</p>

         <div class="section-farmer">
          <div class="point-de-vente">
        {% for shopbuyer in shop %}
          <a href="" class="farmer">
                <div class="container-img">
                    <img src={{asset('uploads/images/'~ shopbuyer.images)}} alt="">
                </div>
                <div class="description">
                    <h6>{{ shopbuyer.name }}</h6>
                    <div class="city">
                        <i class="fi fi-rr-city"></i>
                        <p>Ville: {{ shopbuyer.ville.nom }}</p>
                    </div>
                     <div class="domaine">
                      <i class="fi fi-rr-wheat"></i>
                       <p>Type: {{ shopbuyer.varietename }}</p>
                     </div>

                     <div class="domaine">
                      <i class="fi fi-br-sack"></i>
                        <p>Quatité: {{ shopbuyer.capacity }}</p>
                     </div>
                </div>
            </a> 
         {% endfor %} 
          </div>

          <div class="right-point-de-vente">
             <h3>Couvrir les besoins ruraux en rentabilité agricole</h3>
              <div class="conteneur">
                <span><i class="fi fi-rr-gift"></i><h5>Collecter des produits</h5></span>
                <span><i class="fi fi-rr-truck-side"></i><h5>Livraison et conditionnement</h5></span>
                <span><i class="fi fi-rr-location-alt"></i><h5>Recherche de magasin fiable</h5></span>
                <span><i class="fi fi-rr-handshake"></i><h5>Vendre la qualité</h5></span>
              </div>

              <div class="gaphique">
                <h4>Evolution du marché agricole </h4>
                <div class="plan-data">

                <div class="chart1">
                    <canvas id="barChart" width="300px" height="300px">
                       
                    </canvas>
                  </div>
                  <div class="chart2">
                    <canvas id="doughnut" width="300px" height="300px">
                       
                    </canvas>
                  </div>
                                
                </div>
              </div>
              
          </div>
        </div>
     </div>
  
 
{% endblock %}
