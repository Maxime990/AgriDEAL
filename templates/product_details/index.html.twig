     *{ 
      font-family:'pt sans';
    --blue:#055488;
    --white:#fff;
    --grey:#f5f5f5;
    --black1:#222;
    --black2:#999;
    --main:#5b8c51;
    }

  #detailModal
  {
    width:100%;
    height:100%;
    left:0;
    right:0;
    background-color:rgba(91, 140, 81, 0.5);
    position:relative;
    
   }

   @keyframes fadeIn {
    0%{
      display:none;
      opacity:0;
    }
    100%{
      display:block;
      opacity:1;
    }
   }
  #detailModal .content
  {
    width:70%;
    height:550px;
    background-color: white;
    position:fixed;
    top:50%;
    left: 50%;
    transform: translate(-50%, -50%);
    padding: 20px;
    }

    #detailModal .content #send 
    {
      padding:10px;
      font-size:1.4rem;
      text-decoration:none;
      color:white;
      border-radius:5px;
      background-color:var(--main);
      transition:all 0.3s ease;
      margin:1.5rem 0 ;
      width:100%;
    }

    #detailModal .content .align-item
    {
       display:flex;
    }

    #detailModal .content .align-item .left
    {
       width:80%;
       height:100%;
       padding:0;
       margin:0;
    }

    #detailModal .content .align-item .left img
    {
       width:100%;
       height:320px;
       border-radius:10px
    }

    #detailModal .content .align-item .right
    {
       width:60%;
       height:350px;
       padding:1rem;
       margin-left: 10px;
       bottom:0;
      }

      #detailModal .content .align-item .right textarea
      {
        height:100px;
      }

    #detailModal .content .align-item .right h2
    {
      color:var(--main);
      font-weight:bold;  
    }
    #detailModal .content .align-item .right .col .stock 
    {
       display:flex;
       align-item:center
     }

     #detailModal .content .align-item .right .col .information p::before
     {
      content:url('../icones/exclamation.svg');
      margin-right:10px;
      color:red;
      align-item:center
     }
 

     #detailModal .content .align-item .right .col h6 
     {
      color:var(--main);
      font-size:14;
     }

     #measure 
     {
      margin-left:5px;
      
     }

