     <section class="body">

          <div class="conteneur">

            <div id="detailModal">
              <div class="content">
                <a class="close" href="{{url('project')}}">&times;</a>
                 <div class="align-item" style="position:relative;">
                   <div class="left">
                    <img src="{{asset('uploads/images/'~ product.picture)}}" alt="">
                   </div>
                   <div class="right">
                    <div class="col">
                      <h2>{{product.productName}}</h2>
                      <p>{{product.description | raw}}</p>
                      <div class="stock">
                        <h4>Stock: {{product.quantity }}</h4> 
                        <h4 id="measure">Sacs</h4>
                      </div>

                      <div class="stock">
                        <h4>Mesure: {{product.measure }}</h4> 
                         
                      </div>
                      <h6>Prix / unité de vente du marché: {{product.price | number_format(0, ',', ' ')}} FCFA</h6>
                      <div class="information">
                         <p>La quantité voulu est estimée en unité de vente du produit sur le marché</p>
                      </div>
                      <label for="qtity">Quantité</label>
                      <input class="form-control" type="number" min="1" value="1" name="quantity" id="quantity" placeholder="1">
                      </div>
                      <label for="message">Laisser un message</label>
                      <textarea class="form-control" name="message" id="note" cols="30" rows="10" placeholder="Laissez un message..."></textarea>
                   </div>
                 </div>
                 <a id="send" href="">Obtenez un DEVIS</a>
              </div>   
           </div>
          </div>

     </section>
    
